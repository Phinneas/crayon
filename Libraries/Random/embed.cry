function randomFloat() {
	return $random();
}

function randomInt(minIncl, maxExcl = null) {
	// TODO: write a native function
	if (maxExcl == null) {
		return $floor($random() * minIncl);
	}
	return $floor($random() * (maxExcl - minIncl)) + minIncl;
}

function randomChoice(list) {
	return list[$floor($random() * list.length)];
}
