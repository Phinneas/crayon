function randomFloat() {
	return $$lib_random_random_float();
}

function randomInt(minIncl, maxExcl = null) {
	// TODO: write a native function for integers
	if (maxExcl == null) {
		return $floor($$lib_random_random_float() * minIncl);
	}
	return $floor($$lib_random_random_float() * (maxExcl - minIncl)) + minIncl;
}

function randomChoice(list) {
	return list[$floor($$lib_random_random_float() * list.length)];
}
