
class TileTemplate {
	constructor(id, image_paths) {
		this.id = id;
		this.blocking = TILE_TEMPLATE_BLOCKING_TILES.get(id, null) != null;
		
		images = [];
		for (path : image_paths) {
			images.add(IMAGE_LIBRARY.get('tiles/' + path));
		}
		
		this.images = images;
		this.image = this.images.length == 1 ? this.images[0] : null;
		this.is_static = this.image != null;
		this.images_length = this.images.length;
	}
}


TILE_TEMPLATE_BLOCKING_TILES = {
	'x': 1,
	'g': 1,
};
